{
  "name": "runcodeblock",
  "displayName": "RunCodeBlock",
  "description": "Runs the code between a pair of comments.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/joselucassr/RunCodeBlock"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onCommand:runcodeblock.addCodeBlock"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "runcodeblock.runCodeBlock",
        "title": "Run Code Block"
      },
      {
        "command": "runcodeblock.addCodeBlock",
        "title": "Add Code Block"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "runcodeblock.addCodeBlock",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "runcodeblock.addCodeBlock",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/JSSnippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/n-readlines": "^1.0.3",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "n-readlines": "^1.0.1"
  }
}
